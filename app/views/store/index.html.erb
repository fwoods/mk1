<% if notice %>
<p id = "notice"> <%= notice %> </p>
<% end %>


 <section class="container-fluid">
	<div class="home_wrapper">
		<header id="home_welcome"><h2><i class="icon-road"></i>优雅母婴生活</h2></header>
		<section id="home_things">
		<ul>

<% @products.each do |product| %>
		<li class="thing">
			<div class="pre_ribbon stock"><span><%=product.status%></span></div>
			<%= link_to(product) do %>
              <%if product.photos.count !=0 then %>
				<%= image_tag(product.photos[0].photofile.url(:nomal)) %>
              <%end %>
			<% end %>
			
			<h4 data-placement="bottom" data-toggle="tooltip" title="" data-original-title="<%=product.name%>"><%=product.name%></h4><p><span class="fanciers"><i class="icon-heart"></i><span class="fanciers_count"><%=product.like_num%></span></span><span class="owners"><i class="icon-check"></i><span class="owners_count"><%=product.own_num%></span></span><span class="reviews_count"><i class="icon-book"></i>0</span><small>¥ <%=product.price%></small></p>
		</li>
<% end %>

		</ul>
<div class="digg_pagination span6">
  <%= will_paginate @products %>
</div>
		</section>


<aside id="home_news">
<div class="wrapper">
<h4>最新<a href="/things"><i class="icon-double-angle-right icon-large"></i></a></h4>
	<ul id="home_new_things">

<% @products[0..3].each do |product| %>
		<li class="thing">
			<%= link_to(product) do %>
              <%if product.photos.count !=0 then %>
				<%= image_tag(product.photos[0].photofile.url(:nomal)) %>

              <% end %>
            <% end %>
			<h4 data-placement="bottom" data-toggle="tooltip" title="" data-original-title="<%=product.name%>"><%=product.name%></h4><p><span class="fanciers"><i class="icon-heart"></i><span class="fanciers_count"><%=product.like_num%></span></span>
			</p>
		</li>
<% end %>

	</ul>

<h4>最新评论</h4>
	<ul id="home_new_reviews">	</ul>
  <ul class="ds-recent-comments" data-num-items="5" data-show-avatars="0" data-show-time="1" data-excerpt-length="20"></ul>
</div>
	<div id="site_filling"><small>粤ICP备88888号</small></div>
</aside>
   </div>
</section>



